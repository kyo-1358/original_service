<% if logged_in? %>

  <p>ログイン完了ユーザ: 
<%= current_user.name %>
</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Horse name</th>
      <th>Image</th>
      <th>Post comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.horse_name %></td>
        <td><%= image_tag post.image.thumb.url %></td>
        <td><%= post.post_comment %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>

<div class="center jumbotron">
  <div class="text-center">
    <h1>Welcome to the PhotoUma</h1>
    <%= link_to 'ユーザー登録', signup_path, class: 'btn btn-lg btn-primary' %>

  </div>
</div>
<% end %>