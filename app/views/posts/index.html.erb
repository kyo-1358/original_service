<h3>新着</h3>
<div class="row row-eq-height">
<% @sinchaku_posts.each do |post| %>

<div class="col-md-2">
<div class="card-deck">
  <div class="card">
<%= image_tag post.image.thumb.url, class:'card-img-top', class:'img-thumbnail' %>
    <div class="card-body">
      <%= link_to 'Show', post_path(post) %>
    <% if current_user == post.user %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
    </div>
  </div>
</div>
</div>
<% end %>
</div>
